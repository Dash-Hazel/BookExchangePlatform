@model BookExchangePlatform.Models.Book

<h1>Book Details</h1>
<div class="card">
    <div class="card-body">
        <h5 class="card-title
">
            @Model.Title
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">
            by @Model.Author
        </h6>
        <p class="card-text">
            <strong>Description:</strong> @Model.Description
        </p>
        <p class="card-text">
            <strong>Genre:</strong> @Model.Genre
        </p>
        <p class="card-text">
            <strong>Condition:</strong> @Model.Condition
        </p>
        <p class="card-text">
            <strong>Date of Publishing:</strong> @Model.DateOfPublishing.ToString("MMMM dd, yyyy")
        </p>
        <p class="card-text">
            <strong>Owner:</strong> @(Model.Owner?.FullName ?? "No Owner")
        </p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>


