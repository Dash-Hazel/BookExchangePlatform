@model List<BookExchangePlatform.Models.User>

<h1>Users</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class ="table"> 
    <thead> 
<tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Number of Books Owned</th>
    <th>Actions</th>
    <th>Requested Exchanged</th>
</tr>
    </thead>

    <tbody>

        @foreach (var user in Model)
        {
       <tr>
        <td>@user.FirstName</td>
        <td>@user.LastName</td>
        <td> @user.Email</td>

                <td>
                    @{
                        var booksCount = user.OwnedBooks.Count();
                        if (booksCount > 0)
                        {
                            <span class="badge bg-primary">@booksCount books</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No Books</span>
                    }
                    }
                </td>
                
                <td>
                    @{
                        var requestedExchanges = user.RequestedExchanges.Count();
                    if (requestedExchanges > 0)
                        {
                            <span class="badge bg-primary">@requestedExchanges Exchanges</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No Exchanges</span>
                        }
                    }
                    
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm"> Delete</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm"> Edit</a>
                </td>
        }
         </tr>
        }
    </tbody>
</table>
